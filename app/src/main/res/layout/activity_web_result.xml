<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/analyze_back"
    android:orientation="vertical"
    tools:context=".WebResult">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/WR_btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/backarrow"
            android:text="Button" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/btn_picture"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="13dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/picturebutton" />
        </RelativeLayout>

    </LinearLayout>
    <ImageButton
        android:id="@id/btn_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/backarrow"
        android:padding="10dp"
        android:text="Button" />

    <ImageView
        android:id="@+id/WR_imageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#ffffff"
        android:padding="30dp"
        android:layout_margin="10dp"
        android:scaleType="fitCenter"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/WR_btn_minus"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/minus"
            android:text="-" />

        <ImageButton
            android:id="@+id/WR_btn_again"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_again"
            android:text="Button" />

        <ImageButton
            android:id="@+id/WR_btn_plus"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/plus"
            android:text="+" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="@drawable/analyze_rectangle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/WR_TextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:text="분석 결과"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

    <WebView
        android:id="@+id/WR_WebView"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:visibility="visible" />
</LinearLayout>